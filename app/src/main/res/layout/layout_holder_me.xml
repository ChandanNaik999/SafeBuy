<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_vertical"
    android:padding="@dimen/space5"
    android:layout_marginEnd="5dp"
    android:layout_marginStart="@dimen/spaceLR">
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="vertical"
        android:layout_alignParentRight="true">

        <TextView
            android:id="@+id/tv_chat_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:background="@drawable/bg_chat_me"
            android:fontFamily="@font/roboto_regular"
            android:padding="@dimen/space10"
            android:text="Hi, joe how are you, do you like to join our party in next week because you don't like party?"
            android:textAppearance="@style/CardView.Light"
            android:textColor="@android:color/white"
            android:textSize="14sp" />
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/tv_time"
                android:layout_marginRight="@dimen/space10"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawablePadding="@dimen/space5"
                android:text="5:04pm"
                android:textColor="@color/colorTextInfo"
                android:textSize="@dimen/h5"
                android:layout_alignParentEnd="true"
                android:textAppearance="@style/CardView.Light"/>
        </RelativeLayout>
    </LinearLayout>
</RelativeLayout>